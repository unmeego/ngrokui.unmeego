{
  "name": "ngrok-control",
  "version": "1.0.0",
  "description": "Aplicación de escritorio para controlar túneles ngrok",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "ngrok",
    "tunnel"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "js-yaml": "^4.1.0"
  },
  "build": {
    "appId": "com.ngrokcontrol.app",
    "productName": "ngrok Control",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "icon.png",
      "Unmeego.png",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "icon.png",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "icon.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "icon.png",
      "target": "AppImage"
    }
  }
}
